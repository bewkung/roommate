                            <option value="2">วิทยาศาสตร์</option>
                            <option value="3">วิทยาการสารสนเทศ</option>
                            <option value="4">วิศวกรรมศาสตร์</option>
                            <option value="5">คณะโลจิสติกส์</option>
                            <option value="6">คณะบริหารธุรกิจและการจัดการ</option>
                            <option value="7">คณะศิลปกรรมศาสตร์</option>
                            <option value="8">คณะมนุษยศาสตร์และสังคมศาสตร์</option>
                            <option value="9">คณะเภสัชศาสตร์</option>
                            <option value="10">คณะพยาบาลศาสตร์</option>
                            <option value="11">คณะแพทยศาสตร์</option>
                            <option value="12">คณะสหเวชศาสตร์</option>
                            <option value="13">คณะสาธารณสุขศาสตร์</option>
                            <option value="14">คณะวิทยาศาสตร์การกีฬา</option>
                            <option value="15">คณะดนตรีและการแสดง</option>
                            <option value="16">คณะภูมิสารสนเทศศาสตร์</option>
                            <option value="17">วิทยาลัยนานาชาติ</option>
                            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Majors">สาขา</label>
                        <select id="Majors" name="Majors_id" class="border rounded p-2 w-full" required>
                            <option value="" disabled selected>-- กรุณาเลือกสาขา --</option>
                        </select>
                    </div>
                </div>
                <div class="form-grid-full-width">
                    <div class="form-group">
                        <label for="gender">เพศ</label>
                        <select id="gender" name="gender">
                            <option value="ชาย" selected>ชาย</option>
                            <option value="หญิง">หญิง</option>
                            <option value="LGBTQ">LGBTQ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="status">สถานะ</label>
                        <select id="status" name="status">
                            <option value="มีห้องแล้ว" selected>มีห้องแล้ว</option>
                            <option value="ยังไม่มีห้อง">ยังไม่มีห้อง</option>
                        </select>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="Personality">ลักษณะนิสัย/ความชอบ</label>
                    <select id="Personality" name="Personality_id">
                        <option value="" disabled selected>เลือกหรือไม่เลือกก็ได้</option>
                        <option value="1">ชอบอ่านหนังสือ</option>
                        <option value="2">ชอบเล่นกีฬา</option>
                        <option value="3">ชอบดูหนัง</option>
                        <option value="4">ชอบฟังเพลง</option>
                    </select>
                </div> 

                <div class="button-group">
                    <button class="save-button" type="submit">บันทึกข้อมูล</button>
                </div> 

            </form>
        </div>
</body>

