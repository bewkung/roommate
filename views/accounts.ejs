    <title>ข้อมูลผู้ใช้</title>
</head>

<body>
    <%- include('partials/homeheader') %>
        <div class="container">
            <form action="/accounts" method="POST" enctype="multipart/form-data">
                <div class="profile-header">
                    <div class="profile-image-container flex flex-col items-center text-center">
                        <input type="file" name="image">
                    </div>
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="fullName">ชื่อ</label>
                            <input type="text" id="first_name" name="first_name" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="fullName">นามสกุล</label>
                            <input type="text" id="last_name" name="last_name" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="nickname">ชื่อเล่น</label>
                            <input type="text" id="nickname" name="nickname" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="studentId">รหัสนักศึกษา</label>
                            <input type="number" id="student_id" name="student_id" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="age">อายุ</label>
                            <input type="number" id="age" name="age" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="year">ปีการศึกษา</label>
